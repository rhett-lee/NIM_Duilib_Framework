<?xml version="1.0" encoding="UTF-8"?>
<Window size="500,232" caption="0,0,0,35">
    <VBox bkcolor="bk_wnd_darkcolor">
        <HBox width="stretch" height="35" bkcolor="bk_wnd_lightcolor">
            <Control width="auto" height="auto" bkimage="logo_18x18.png" valign="center" margin="8"/>
            <Label text="替换" valign="center" margin="8"/>
            <Control />
            <Button class="btn_wnd_close" name="closebtn" margin="4,6,8,0"/>
        </HBox>
        <VBox>
            <HBox height="auto">
                <Label text="查找内容：" height="28" text_align="vcenter" margin="8,8,0,0"/>
                <RichEdit class="simple prompt simple_border" name="btn_find_text" width="stretch" height="28" prompttext="查找" text_padding="2,0,0,0" text_align="vcenter" bkcolor="white" margin="2,8,4,0"/>
                <Button class="btn_global_white_80x30" name="btn_find_next" text="查找下一个" width="80" height="28" margin="4,8,8,0"/>
            </HBox>
            <HBox height="auto">
                <Label text="　替换为：" height="28" text_align="vcenter" margin="8,8,0,0"/>
                <RichEdit class="simple prompt simple_border" name="btn_replace_text" width="stretch" height="28" prompttext="替换" text_padding="2,0,0,0" text_align="vcenter" bkcolor="white" margin="2,8,4,0"/>
                <Button class="btn_global_white_80x30" name="btn_replace" text="替换" width="80" height="28" margin="4,8,4,0"/>
                <Button class="btn_global_white_80x30" name="btn_replace_all" text="全部替换" width="80" height="28" margin="4,8,8,0"/>
            </HBox>
            <GroupVBox margin="10,6,10,6" text=" 搜索方向 " height="auto" corner_size="4,4">
                <HBox height="40" margin="8,16,8,0" padding="12,0,0,0">
                    <Option class="circle_option_2" group="option_direction_group" text="向上搜索" margin="0,6,0,0"/>
                    <Option class="circle_option_2" group="option_direction_group" text="向下搜索" name="option_direction_down" margin="16,6,0,0" selected="true"/>
                </HBox>
            </GroupVBox>
            <HBox height="auto">
                <CheckBox class="checkbox_font12" name="check_box_case_sensitive" text="区分大小写" valign="center" margin="8,8,8,0" selected="true"/>
                <CheckBox class="checkbox_font12" name="check_box_match_whole_word" text="全字匹配" valign="center" margin="8,8,8,0" selected="false"/>
                <Control />
                <Button class="btn_global_white_80x30" name="btn_cancel" text="取消" width="80" height="28" margin="4,8,8,0"/>
            </HBox>
        </VBox>
    </VBox>
</Window>
