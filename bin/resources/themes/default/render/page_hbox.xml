<?xml version="1.0" encoding="UTF-8"?>
<Window>
    <Class name="page_hbox" margin="6,6,6,6" width="100" height="80" bkcolor="Sienna" border_size="1" border_color="green"/>
    <Label text="布局HBox测试"/>
    <HBox bkcolor="gray" border_size="1" border_color="red" padding="8,8,8,8">
        <Control float="true" width="stretch" height="stretch" border_size="1" border_color="green" bkcolor="Cornsilk"/>
        <Label text="minwidth/minheight: 300*300" float="true" text_align="top" width="200" height="100" minwidth="300" minheight="300" margin="64,160,6,6" border_size="1" border_color="green" bkcolor="Olive"/>
        <Label text="maxwidth/maxheight: 80*80" float="true" single_line="false" width="200" height="100" maxwidth="80" maxheight="80" margin="600,160,6,6" border_size="1" border_color="green" bkcolor="LemonChiffon"/>
        <LabelBox text="布局测试" float="true" single_line="false" width="200" height="200" margin="800,160,6,6" padding="6,6,6,6" border_size="1" border_color="green" bkcolor="LemonChiffon">
            <Control margin="6,6,6,6" width="stretch" height="stretch" border_size="2" border_color="red" bkcolor="Sienna"/>
        </LabelBox>
        
        <Label class="page_hbox" text="1 left,top" halign="left" valign="top" minwidth="300" maxheight="60"/>
        <Label class="page_hbox" text="2 left,center" halign="left" valign="center"/>
        <Label class="page_hbox" text="3 left,bottom" halign="left" valign="bottom" height="stretch"/>
        <Label class="page_hbox" text="4 center,top" halign="center" valign="top"/>
        <Label class="page_hbox" text="5 center,center" halign="center" valign="center"/>
        <Label class="page_hbox" text="6 center,bottom" halign="center" valign="bottom"/>
        <Label class="page_hbox" text="7 right,top" halign="right" valign="top"/>
        <Label class="page_hbox" text="8 right,center" halign="right" valign="center"/>
        <Label class="page_hbox" text="9 right,bottom" halign="right" valign="bottom" width="stretch"/>
    </HBox>
</Window>
