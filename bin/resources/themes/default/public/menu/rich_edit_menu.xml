<?xml version="1.0" encoding="utf-8"?>
<Window>
    <Class name="my_menu_element" height="28" width="160" padding="10,0,10,0" />
    <Class name="my_menu_text" margin="30,0,0,0"/>
    <VListBox class="menu">
        <!-- 一级菜单 -->
        <MenuElement class="menu_element my_menu_element" name="edit_menu_copy">
            <Label class="menu_text my_menu_text" text="复制(Ctrl+C)"/>
        </MenuElement>        
        <MenuElement class="menu_element my_menu_element" name="edit_menu_cut">
            <Label class="menu_text my_menu_text" text="剪切(Ctrl+X)"/>
        </MenuElement>        
        <MenuElement class="menu_element my_menu_element" name="edit_menu_paste">
            <Label class="menu_text my_menu_text" text="粘贴(Ctrl+V)"/>
        </MenuElement>        
        <MenuElement class="menu_element my_menu_element" name="edit_menu_del">
            <Label class="menu_text my_menu_text" text="删除(Del)"/>
        </MenuElement>
           
        <!-- 菜单项之间的分割线 -->
        <Box class="menu_split_box">
            <Control class="menu_split_line" />
        </Box>
        
        <MenuElement class="menu_element my_menu_element" name="edit_menu_sel_all">
            <Label class="menu_text my_menu_text" text="全选(Ctrl+A)"/>
        </MenuElement>
        
        <!-- 菜单项之间的分割线 -->
        <Box class="menu_split_box">
            <Control class="menu_split_line" />
        </Box>
        
        <MenuElement class="menu_element my_menu_element" name="edit_menu_undo">
            <Label class="menu_text my_menu_text" text="撤销(Ctrl+Z)"/>
        </MenuElement>
        <MenuElement class="menu_element my_menu_element" name="edit_menu_redo">
            <Label class="menu_text my_menu_text" text="重做(Ctrl+Y)"/>
        </MenuElement>
        
  </VListBox>
</Window>